<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/config_general" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="continously_vibrate"
            android:title="@string/config_continuously_vibrate" >
        </CheckBoxPreference>
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="only_show_failing_builds"
            android:title="@string/config_only_failing" >
        </CheckBoxPreference>
        </PreferenceCategory>

    <!-- Configure via barcode -->
    <PreferenceScreen
        android:key="scan_qr_code"
        android:summary="@string/config_via_barcode_summary"
        android:title="@string/config_via_barcode_title" >
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/config_server_configuration" >

        <!-- Jenkins -->
        <PreferenceCategory android:title="@string/config_jenkins_configuration" >
            <EditTextPreference
                android:key="jenkins_base_url"
                android:title="@string/config_jenkins_base_url" />
            <EditTextPreference
                android:key="jenkins_username"
                android:title="@string/config_jenkins_username" />
            <EditTextPreference
                android:dependency="jenkins_username"
                android:key="jenkins_token"
                android:title="@string/config_jenkins_token" />
        </PreferenceCategory>

        <!-- GCM -->
        <PreferenceCategory android:title="@string/config_gcm_configuration" >
            <EditTextPreference
                android:key="gcm_sender_id"
                android:title="@string/config_gcm_sender_id" />
            <EditTextPreference
                android:dependency="gcm_sender_id"
                android:enabled="false"
                android:key="gcm_token"
                android:title="@string/config_gcm_token" />
        </PreferenceCategory>
    </PreferenceScreen>

    <Preference
        android:key="forget_settings"
        android:title="@string/config_forget_settings" />

</PreferenceScreen>